{
    "name": "Plainpad",
    "id": "plainpad",
    "packaging_format": 1,
    "description": {
        "en": "Self hosted, note taking application",
        "fr": "Application de prise de notes auto-hébergée"
    },
    "version": "1.0.0~ynh2",
    "url": "https://alextselegidis.com/get/plainpad",
    "upstream": {
        "license": "AGPL-3.0-only",
        "website": "https://alextselegidis.com/get/plainpad",
        "demo": "https://alextselegidis.com/try/plainpad/#/login",
        "admindoc": "https://alextselegidis.com/get/plainpad/self-hosted",
        "code": "https://github.com/alextselegidis/plainpad"
    },
    "license": "AGPL-3.0-only",
    "maintainer": {
        "name": "eric_G",
        "email": ""
    },
    "requirements": {
        "yunohost": ">= 4.3.0"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php8.0-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/plainpad",
                "default": "/plainpad"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "help": {
                    "en": "If enabled, Plainpad will be accessible by people who do not have an account. This can be changed later via the webadmin.",
                    "fr": "Si cette case est cochée, Plainpad sera accessible aux personnes n’ayant pas de compte. Vous pourrez changer ceci plus tard via la webadmin."
                },
                "default": true
            }
        ]
    }
}
